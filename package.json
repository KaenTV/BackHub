{
  "name": "BackHub",
  "version": "1.5.0-BETA",
  "description": "L'outil de gestion complet pour RevolutionDayZ",
  "main": "app/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/KaenTV/BackHub.git"
  },
  "author": "Kaen",
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "start:prod": "cross-env NODE_ENV=production electron .",
    "build": "electron-builder",
    "build:win": "cross-env NODE_ENV=production CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win --publish never",
    "build:win:publish": "cross-env NODE_ENV=production electron-builder --win --publish always",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "build": {
    "appId": "com.backhub.app",
    "productName": "BackHub",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "app/**/*",
      "interface/**/*",
      "package.json",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "forceCodeSigning": false,
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "BackHub",
      "deleteAppDataOnUninstall": false,
      "warningsAsErrors": false,
      "include": "build/installer.nsh",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "artifactName": "${productName}-Setup.${ext}"
    },
    "extraFiles": [
      {
        "from": "build/BackHub.cer",
        "to": "BackHub.cer"
      },
      {
        "from": "build/install-cert.ps1",
        "to": "install-cert.ps1"
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "KaenTV",
      "repo": "BackHub",
      "releaseType": "release"
    },
    "compression": "maximum",
    "asar": true
  },
  "dependencies": {
    "electron-store": "^10.0.0",
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "jest": "^29.7.0"
  }
}
